<h2>Edit <%=@landmark.name%></h2>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="name">Name:</label>
    <input type="text" name="landmark[name]" placeholder="<%=@landmark.name%>" id="name">
  <br></br>

  <label for="year_completed">Year Completed:</label>
    <input type="number" name=landmark[year_completed] placeholder="<%=@landmark.year_completed%>" id="year_completed">

  <input type="submit" value="Edit Landmark"></input>
</form>
