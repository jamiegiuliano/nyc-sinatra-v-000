<h2>Edit <%=@figure.name%></h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name">Name:</label>
    <input type="text" name="figure[name]" placeholder="<%=@figure.name%>" id="figure_name"></input>
  <br></br>

  <label>Existing Landmark(s):</label>
    <%Landmark.all.each do |l|%>
      <%=l.name%><input type="checkbox" name="figure[landmark_ids][]" value="<%=l.id%>" id="landmark_<%=l.id%>"></input>
    <%end%>
  <br></br>

  <label for="new_landmark">New Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>

  <label for="landmark_year_completed">Landmark Year Completed:<label>
    <input type="number" name="landmark[year_completed]" id="landmark_year_completed"></input>
  <br></br>

  <label>Existing Title(s):</label>
    <%Title.all.each do |t|%>
      <input type="checkbox" name="figure[title_ids][]" value="<%=t.id%>" id="title_<%=t.id%>"><%=t.name%></input>
    <%end%>
  <br></br>

  <label for="new_title">Or, Add New Title:</label>
    <input type="text" name="title[name]" id="new_title"></input>
  <br></br>

  <input type="submit" value="Edit Figure"></input>
</form>
